# AWS Bedrock Credentials
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# Optional: Air quality API (IQAir, OpenWeatherMap, etc.)
IQAIR_API_KEY=your-iqair-api-key-here

# Writer API (for Knowledge Graph + MeSH ontology)
WRITER_API_KEY=your-writer-api-key-here

# Application Settings
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO

# INDRA Settings
# Network Search API for entity grounding and resolution
INDRA_BASE_URL=https://network.indra.bio
INDRA_TIMEOUT=30
INDRA_CACHE_TTL=3600

# Agent Settings (AWS Bedrock Model ID)
AGENT_MODEL=us.anthropic.claude-sonnet-4-5-20250929-v1:0
AGENT_TEMPERATURE=0
