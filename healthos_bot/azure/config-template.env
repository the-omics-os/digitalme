# Azure Deployment Configuration Template
# Copy this file to ../config/config.env and update the values

# Azure Subscription and Resource Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_RESOURCE_GROUP=vibecoding-rg
AZURE_LOCATION=eastus

# Azure Container Registry Configuration
ACR_NAME=frontiertower
ACR_LOGIN_SERVER=frontiertower.azurecr.io

# Azure Container Instances Configuration
ACI_NAME=vibecoding-bot
MONGODB_ACI_NAME=vibecoding-mongodb

# Azure Key Vault Configuration
KEY_VAULT_NAME=vibecoding-kv

# Azure Networking Configuration
VNET_NAME=vibecoding-vnet
SUBNET_NAME=vibecoding-subnet

# Azure Storage Configuration
STORAGE_ACCOUNT_NAME=vibecodingstorage

# Bot Configuration (these will be stored in Key Vault)
# TELEGRAM_TOKEN=your-telegram-bot-token
# OPENAI_API_KEY=your-openai-api-key

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=vibecoding2024

# Production Database Options
# Option 1: Use MongoDB on Azure Container Instances (default)
# MONGODB_URI=mongodb://admin:vibecoding2024@vibecoding-mongodb.eastus.azurecontainer.io:27017/vibecoding_bot?authSource=admin

# Option 2: Use Azure Cosmos DB with MongoDB API (recommended for production)
# MONGODB_URI=mongodb://vibecoding-cosmosdb:password@vibecoding-cosmosdb.mongo.cosmos.azure.com:10255/vibecoding_bot?ssl=true&replicaSet=globaldb&retrywrites=false&maxIdleTimeMS=120000&appName=@vibecoding-cosmosdb@

# Option 3: Use MongoDB Atlas
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/vibecoding_bot?retryWrites=true&w=majority

# Resource Sizing (adjust based on your needs)
BOT_CPU=1.0
BOT_MEMORY=1.5
MONGODB_CPU=1.0
MONGODB_MEMORY=2.0

# Tags for resource organization
PROJECT_TAG=vibecoding-bot
ENVIRONMENT_TAG=production
